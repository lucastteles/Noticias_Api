@model Noticias.Application.Dto.NoticiaDto


@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar Noticia</h1>

<h3>Você tem certeza que deseja deletar esta Noticia ?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
          Titulo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
         Conteudo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Conteudo)
        </dd>
        <dt class = "col-sm-2">
          Categoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>  
        <dt class = "col-sm-2">
          Imagem
        </dt>
         <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Imagem)
        </dd>  
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="NoticiaId" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
